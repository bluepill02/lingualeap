rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read anyone's profile, but only write to their own.
    match /users/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Companion Circles are public to read for any authenticated user.
    match /companion-circles/{circleId} {
      allow read: if request.auth != null;
      // Only authenticated users can join/leave (update the members array).
      // Creating/deleting circles would need admin rules in a real app.
      allow write: if request.auth != null;
      
      // Posts can be read by any authenticated user.
      match /posts/{postId} {
        allow read: if request.auth != null;
        // A user can only create a post if they are a member of the circle.
        // `resource.data` refers to the document being created.
        allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId && get(/databases/$(database)/documents/companion-circles/$(circleId)).data.members.hasAny([request.auth.uid]);
        // Allow users to update reactions, but not change the content.
        allow update: if request.auth != null && request.resource.data.authorId == resource.data.authorId;
      }
    }
    
    // Any authenticated user can read live classes and events.
    match /liveClasses/{classId} {
      allow read: if request.auth != null;
    }
    match /events/{eventId} {
       allow read: if request.auth != null;
    }

    // A user can only access their own mission submissions.
    match /mission-submissions/{submissionId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }

    // A user can only access their own progress data.
    match /userProgress/{userId}/{subject}/{chapterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User flashcards are private.
    match /userFlashcards/{flashcardId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}