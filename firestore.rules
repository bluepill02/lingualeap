
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Companion Circles Rules
    match /companion-circles/{circleId} {
      // Allow any authenticated user to read circle details
      allow read: if request.auth != null;
      // Allow any authenticated user to create a circle
      allow create: if request.auth != null;
      // Allow updates only for joining/leaving (simplified for now)
      allow update: if request.auth != null;

      // Posts subcollection
      match /posts/{postId} {
        // Any authenticated user can read posts
        allow read: if request.auth != null;
        // Only authenticated users can create posts
        allow create: if request.auth != null;
        // Allow users to update posts (e.g., for reactions)
        allow update: if request.auth != null;
      }
    }
    
    // Mission Submissions Rules
    match /mission-submissions/{submissionId} {
        // Only the user who created the submission can read or write it
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // User Progress Rules
    match /userProgress/{userId}/{subject}/{chapterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Events Rules
    match /events/{eventId} {
        // Allow any authenticated user to read events.
        // In a real app, this might be more granular.
        allow read: if request.auth != null;
    }
  }
}
